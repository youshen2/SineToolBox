<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    tools:context="moye.sinetoolbox.Activity.root.RootRebootActivity">

    <moye.sinetoolbox.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/activity_root_btn_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minHeight="40.0dip">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/item_decorate" />

                <TextView
                    style="@style/PageTitle"
                    android:text="@string/activity_root_reboot_title" />
            </RelativeLayout>

            <Button
                android:id="@+id/activity_root_reboot_rec"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_default"
                android:stateListAnimator="@drawable/anim_button_touch"
                android:text="重启到Recovery"
                android:textSize="13sp"
                android:textColor="@color/font_title" />

            <Button
                android:id="@+id/activity_root_reboot_edl"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_default"
                android:stateListAnimator="@drawable/anim_button_touch"
                android:text="重启到9008"
                android:textSize="13sp"
                android:textColor="@color/font_title" />

            <Button
                android:id="@+id/activity_root_reboot_bl"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:textSize="13sp"
                android:background="@drawable/button_default"
                android:stateListAnimator="@drawable/anim_button_touch"
                android:text="重启到bootloader"
                android:textColor="@color/font_title" />
        </LinearLayout>
    </moye.sinetoolbox.view.ReboundScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>