<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    tools:context="moye.sinetoolbox.Activity.ActivityAddActivity">

    <moye.sinetoolbox.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minHeight="40.0dip">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/item_decorate" />

                <TextView
                    style="@style/PageTitle"
                    android:text="@string/add_activity_a" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="应用包名"
                android:textColor="@color/font_title" />

            <EditText
                android:id="@+id/activity_open_packagename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/list_bg"
                android:hint="类似于com.xx.xx"
                android:maxLines="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/font_title"
                android:textColorHint="@color/font_describe"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="活动名"
                android:textColor="@color/font_title" />

            <EditText
                android:id="@+id/activity_open_activityname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/list_bg"
                android:hint="类似于com.xx.xx.xx.xx"
                android:maxLines="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/font_title"
                android:textColorHint="@color/font_describe"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="名称"
                android:textColor="@color/font_title" />

            <EditText
                android:id="@+id/activity_open_displayname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/list_bg"
                android:hint="在此处输入"
                android:maxLines="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/font_title"
                android:textColorHint="@color/font_describe"
                android:textSize="12dp" />

            <Button
                android:id="@+id/activity_open_openbtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_default"
                android:stateListAnimator="@drawable/anim_button_touch"
                android:text="添加"
                android:textAllCaps="false"
                android:textColor="@color/font_title" />
        </LinearLayout>
    </moye.sinetoolbox.view.ReboundScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>